---

<Layout metadata={metadata}>

  <!-- Content Widget ****************左 -->

  <Content
    isReversed
    tagline="Products"
    title="Extensive whole-house water purification product line"
    
    items={[
      // {
      //   title: '高泥沙保存能力',
      //   description:
